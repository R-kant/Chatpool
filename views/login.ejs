<div class="container ">

	<div class="row ">
		

<div class="col s12 m6 offset-m3">
	<% if(error && error.length >0){ %>
    <div id="tost2" class="card-panel tst red white-text">
      <%= error %>
    </div>
	     <%}%>

   <% if(success && success.length >0){ %>
    <div id="tost1" class="card-panel tst green white-text">
      <%= success %>
    </div>
    <%}%>
 </div>
		<div class="col m6 s12 offset-m3 " id="loginBox">
			<div class="card red ">
				<div class="card-image">
					<img class="activator" src="https://www.thevateam.london/wp-content/uploads/2018/08/web-chat.jpg">
				</div>
				<div class="card-content">
					<span class="card-title white-text">Start a conversation !</span>
					<p class="activator black-text">
						
						<button class="activator btn waves-light waves-effect blue ">Log in here <i class="material-icons right">exit_to_app</i></button>
					</p>
				</div>

				<div class="card-reveal">
					<span class="card-title ">
						Log In
						<i class="material-icons">close</i>
					</span>
					<form action="/login" method="POST">
						<div class="input-field ">
							<input type="text" id="name" name="username">

							<label for="name">Username</label>
						</div>
						<div class="input-field ">
							<input type="password" name="password" id="password">
							<label for="password">Password</label>
							
						</div>
						<div class="input-field center-align">
								
							<button class="btn blue center-align waves-effect waves-light red "><i class="material-icons left">send</i>Submit</button>
						</div>
					</form>
				</div>
				
			</div>
		</div>

		
	</div>
</div>


